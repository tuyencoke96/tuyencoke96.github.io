@model IEnumerable<WebAppTest.Models.ManageMember>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
    {
        <p>
            Title: @Html.TextBox("SearchString") <input type="submit" name="search" value="Search" />
        </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td contenteditable="true" data-id_firstname="item.first_name" name="firstname">
            @Html.DisplayFor(modelItem => item.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
<script>
    function update(id, text, column) {
        $ajax({
            url: "Memberabc/Update",
            data: {id:id,text:text,column:column},
            type: "POST",
            success: function (data) {
                location.reload();
            }
        });
    }

    $(document).on('blur', '.firstname', function () {
        var id = $(this).data('id_firstname');
        var text = $(this).text();
        update(id, text, "first_name");
    });
</script>